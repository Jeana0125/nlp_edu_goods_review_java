<configuration>
  <!-- Site specific YARN configuration properties -->
  <!-- yarn 서비스가 mr의 shuffle 과정을 가능하게 설정 -->
  <property>
    <name>yarn.nodemanager.aux-services</name>
    <value>mapreduce_shuffle</value>
  </property>
  <!-- resourcemanager의 ha 시작 -->
  <property>
    <name>yarn.resourcemanager.ha.enabled</name>
    <value>true</value>
  </property>
  <!-- 2개 resourcemanage의 ha에 명명 -->
  <property>
    <name>yarn.resourcemanager.cluster-id</name>
    <value>cluster1</value>
  </property>
  <!-- RM HA의 2개 resourcemanager 명명 -->
  <property>
    <name>yarn.resourcemanager.ha.rm-ids</name>
    <value>rm1,rm2</value>
  </property>
  <!-- rm1의 reourcemanager 스레드가 존재하는 서버의 지정 -->
  <property>
    <name>yarn.resourcemanager.hostname.rm1</name>
    <value>cdh3</value>
  </property>
  <!-- rm2의 reourcemanager 스레드가 존재하는 서버의 지정 -->
  <property>
    <name>yarn.resourcemanager.hostname.rm2</name>
    <value>cdh4</value>
  </property>
  <!-- zookeeper 클러스터의 주소와 포트 설정 -->
  <property>
    <name>yarn.resourcemanager.zk-address</name>
    <value>cdh2:2181,cdh3:2181,cdh4:2181</value>
  </property>
</configuration>
